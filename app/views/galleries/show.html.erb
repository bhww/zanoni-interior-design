<section class="portfolio-show" %>
  <div class="container-fluid">
    <br>
    <h1>
     Portfolio | <%= @gallery.name %>
    </h1>
    <p>
      <%= @gallery.description if @gallery.description.present? %>
    </p>
    <%= link_to 'Edit gallery title and/or description text (admin only)', edit_gallery_path(@gallery), class: "btn btn-sm btn-success" if user_signed_in? %>
    <%#= link_to 'Back', galleries_path %>
   <hr>
   <!-- Images --> 
   <div class = "row">
     <% @pictures.each do |picture| %>
      <div class="col-xs-12 col-lg-4" style="padding: 1rem;">
        <%= image_tag picture.image.url(:large), class:"img-fluid" %>
         <p>
           <%= picture.try(:name) %>
            <% if user_signed_in? %>
              <br> 
              <%= link_to "Edit (admin only)", "#", class: "btn btn-sm btn-success" %>
             <% end %>
           </p>
      </div>
     <% end %>
    </div>
  </div>
</section>

<%= render 'welcome/contact_us_section' %>
